<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} - Tim & Jen's Recipe Book</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1>Tim & Jen's Recipe Book</h1>
        <nav>
            <a href="/">Home</a>
            <a href="/about/">About</a>
        </nav>
    </header>
    <main>
        {{ content | safe }}
    </main>
    <footer>
        <p>&copy; 2024 Tim &amp; Jen</p>
    </footer>
    <script>
        window.addEventListener('load', () => {
            // Store prefetched content
            const pageCache = new Map();

            // Function to fetch and cache content
            async function prefetchPage(url) {
                try {
                    const response = await fetch(url);
                    const text = await response.text();
                    pageCache.set(url, text);
                } catch (error) {
                    console.error('Prefetch failed:', error);
                }
            }

            // Get all links and set up prefetch
            const links = document.querySelectorAll('a');
            links.forEach(link => {
                if (link.href.startsWith(window.location.origin) || link.href.startsWith('/')) {
                    // Prefetch and store content
                    prefetchPage(link.href);

                    // Add click handler
                    link.addEventListener('click', async (e) => {
                        e.preventDefault();
                        
                        // If we have cached content, use it
                        if (pageCache.has(link.href)) {
                            // Parse the cached content
                            const parser = new DOMParser();
                            const doc = parser.parseFromString(pageCache.get(link.href), 'text/html');
                            
                            // Update the page content
                            document.title = doc.title;
                            document.querySelector('main').innerHTML = doc.querySelector('main').innerHTML;
                            
                            // Update the URL without a page reload
                            history.pushState({}, '', link.href);
                        } else {
                            // Fallback to normal navigation if cache missing
                            window.location.href = link.href;
                        }
                    });
                }
            });
        });
    </script>
</body>
</html>
