<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} - Tim & Jen's Recipe Book</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1>Tim & Jen's Recipe Book</h1>
        <nav>
            <a href="/">Home</a>
            <a href="/about/">About</a>
        </nav>
    </header>
    <main>
        {{ content | safe }}
    </main>
    <footer>
        <p>&copy; 2024 Tim &amp; Jen</p>
    </footer>
    <script>
        window.addEventListener('load', () => {
            // Get all links on the page
            const links = document.querySelectorAll('a');
            
            // For each link
            links.forEach(link => {
                // Only preload local links (those starting with / or relative paths)
                if (link.href.startsWith(window.location.origin) || link.href.startsWith('/')) {
                    // Create a preload link
                    const preloadLink = document.createElement('link');
                    preloadLink.rel = 'prefetch';
                    preloadLink.href = link.href;
                    document.head.appendChild(preloadLink);
                }
            });
        });
    </script>
</body>
</html>
